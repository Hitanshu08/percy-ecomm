# REQUIRED: Security
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here

# REQUIRED: Admin settings
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@percy.com
ADMIN_PASSWORD=adminpass123
ADMIN_USER_ID=admin
ADMIN_ROLE=admin

# REQUIRED: Database settings (MySQL)
# Format: mysql+pymysql://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_URL=mysql+pymysql://root:password@127.0.0.1:3306/percy_ecomm

# Optional: Security (defaults shown)
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Optional: Environment
DEBUG=false

# Optional: CORS (defaults shown)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional: API Settings
API_BASE_URL=http://127.0.0.1:8000

# Optional: Logging
LOG_LEVEL=INFO

# (Optional) SQLite fallback example
# DATABASE_URL=sqlite:///./percy_ecomm.db

# Redis (when you implement Redis)
# REDIS_URL=redis://localhost:6379 