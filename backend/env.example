# REQUIRED: Security
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here

# REQUIRED: Admin settings
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@percy.com
ADMIN_PASSWORD=adminpass123
ADMIN_USER_ID=admin
ADMIN_ROLE=admin

# REQUIRED: Database settings (MySQL)
# Format: mysql+pymysql://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_URL=mysql+pymysql://root:password@127.0.0.1:3306/percy_ecomm
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=300
DB_POOL_TIMEOUT=10

# Optional: Security (defaults shown)
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Optional: Environment
DEBUG=false

# Optional: CORS (defaults shown)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional: API Settings
API_BASE_URL=https://api.valuesubs.com

# Optional: Logging
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_TTL_DAYS=7

# (Optional) SQLite fallback example
# DATABASE_URL=sqlite:///./percy_ecomm.db

# Redis (when you implement Redis)
# REDIS_URL=redis://localhost:6379 

# Email (SMTP) for OTP/reset emails
# SMTP_HOST=smtp.yourprovider.com
# SMTP_PORT=587
# SMTP_USERNAME=your-smtp-user
# SMTP_PASSWORD=your-smtp-password
# SMTP_FROM_EMAIL=no-reply@valuesubs.com
# SMTP_FROM_NAME=Valuesubs
# SMTP_USE_TLS=true
# SMTP_USE_SSL=false
# SMTP_TIMEOUT=15
# SMTP_DEBUG=false

# MongoDB (optional)
# USE_MONGO=true
# MONGO_URI=mongodb://localhost:27017
# MONGO_DB=percy_ecomm